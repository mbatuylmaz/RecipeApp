<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RecipeApp.ViewModels"
             xmlns:models="clr-namespace:RecipeApp.Models"
             x:DataType="viewModels:MainViewModel"
             x:Class="RecipeApp.MainPage"
             Title="Tarif Defterim"
             BackgroundColor="#121212">

        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20"
              RowSpacing="10">
                <Button Grid.Row="0"
                        Text="Tariflerimi Listele"
                        Command="{Binding GetRecipesCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding Recipes}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedRecipe}"
                                SelectionChangedCommand="{Binding GoToDetailsCommand}"
                                SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                        <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Recipe">
                                        <Frame Margin="0,5"
                                               Padding="15"
                                               BackgroundColor="#1E1E1E"
                                               HasShadow="False"
                                               BorderColor="#333333">
                                                <VerticalStackLayout>
                                                        <Label Text="{Binding Title}"
                                                               FontSize="18"
                                                               FontAttributes="Bold"
                                                               TextColor="White"/>
                                                        <Label Text="{Binding Category}"
                                                               FontSize="14"
                                                               TextColor="#BBBBBB"/>
                                                </VerticalStackLayout>
                                        </Frame>
                                </DataTemplate>
                        </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Grid.Row="2"
                        Text="Yeni Tarif Ekle"
                        Command="{Binding GoToAddRecipeCommand}"
                        BackgroundColor="#03DAC6"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>

        </Grid>
</ContentPage>