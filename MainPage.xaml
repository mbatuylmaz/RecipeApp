<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RecipeApp.ViewModels"
             xmlns:models="clr-namespace:RecipeApp.Models"
             x:DataType="viewModels:MainViewModel"
             x:Class="RecipeApp.MainPage"
             Title="Tarif Defterim">

    <Grid RowDefinitions="Auto, *">

        <Button Text="Tarifleri Yükle"
                Command="{Binding GetRecipesCommand}"
                Margin="10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Recipes}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedRecipe}"
                        SelectionChangedCommand="{Binding GoToDetailsCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Recipe">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Title}"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Category}"
                               FontSize="14"
                               TextColor="Gray"/>
                        <BoxView HeightRequest="1"
                                 Color="LightGray"
                                 Margin="0,5"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="+"
                Command="{Binding GoToAddRecipeCommand}"
                FontSize="30"
                HorizontalOptions="End"
                Margin="20"
                Grid.Row="1"/>
    </Grid>
</ContentPage>