<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RecipeApp.ViewModels"
             x:DataType="viewModels:RecipeDetailViewModel"
             x:Class="RecipeApp.Views.RecipeDetailPage"
             Title="{Binding Recipe.Title}">

        <ScrollView Padding="20">
                <VerticalStackLayout Spacing="15">
                        <Label Text="{Binding Recipe.Title}"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding Recipe.Category}"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>

                        <BoxView HeightRequest="1"
                                 Color="LightGray"/>

                        <Label Text="Malzemeler"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Recipe.Ingredients}"
                               FontSize="16"/>

                        <Label Text="Nasıl Yapılır?"
                               FontSize="20"
                               FontAttributes="Bold"
                               Margin="0,15,0,0"/>
                        <Label Text="{Binding Recipe.Instructions}"
                               FontSize="16"/>
                        <Button Text="Tarifi Sil"
                                Command="{Binding DeleteRecipeCommand}"
                                BackgroundColor="Red"
                                TextColor="White"
                                FontAttributes="Bold"
                                Margin="0,30,0,0"/>
                </VerticalStackLayout>
        </ScrollView>
</ContentPage>