<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RecipeApp.ViewModels"
             x:DataType="viewModels:AddRecipeViewModel"
             x:Class="RecipeApp.Views.AddRecipePage"
             Title="Yeni Tarif Ekle">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Yemek Adı"
                   FontAttributes="Bold"/>
            <Entry Text="{Binding Title}"
                   Placeholder="Örn: Mercimek Çorbası"/>

            <Label Text="Kategori"
                   FontAttributes="Bold"/>
            <Entry Text="{Binding Category}"
                   Placeholder="Örn: Çorbalar"/>

            <Label Text="Malzemeler"
                   FontAttributes="Bold"/>
            <Editor Text="{Binding Ingredients}"
                    Placeholder="Her satıra bir malzeme..."
                    AutoSize="TextChanges"/>

            <Label Text="Hazırlanışı"
                   FontAttributes="Bold"/>
            <Editor Text="{Binding Instructions}"
                    Placeholder="Nasıl yapılır anlatın..."
                    AutoSize="TextChanges"/>

            <Button Text="Tarifi Kaydet"
                    Command="{Binding SaveRecipeCommand}"
                    BackgroundColor="Green"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>