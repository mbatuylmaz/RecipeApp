<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RecipeApp.ViewModels"
             x:DataType="viewModels:AddRecipeViewModel"
             x:Class="RecipeApp.Views.AddRecipePage"
             Title="Yeni Tarif Ekle"
             BackgroundColor="#121212">
       <ScrollView Padding="25">
              <VerticalStackLayout Spacing="20">
                     <Label Text="Yeni Tarif Oluştur"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   Margin="0,0,0,10"/>

                     <VerticalStackLayout Spacing="5">
                            <Label Text="Yemek Adı"
                                          TextColor="#03DAC6"
                                          FontAttributes="Bold"/>
                            <Frame Padding="10,0"
                                          BackgroundColor="#1E1E1E"
                                          HasShadow="False"
                                          BorderColor="#333333">
                                   <Entry Text="{Binding Title}"
                                                 Placeholder="Örn: Mercimek Çorbası"
                                                 PlaceholderColor="Gray"
                                                 TextColor="White"/>
                            </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                            <Label Text="Kategori"
                                          TextColor="#03DAC6"
                                          FontAttributes="Bold"/>
                            <Frame Padding="10,0"
                                          BackgroundColor="#1E1E1E"
                                          HasShadow="False"
                                          BorderColor="#333333">
                                   <Entry Text="{Binding Category}"
                                                 Placeholder="Örn: Çorbalar"
                                                 PlaceholderColor="Gray"
                                                 TextColor="White"/>
                            </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                            <Label Text="Malzemeler"
                                          TextColor="#03DAC6"
                                          FontAttributes="Bold"/>
                            <Frame Padding="10"
                                          BackgroundColor="#1E1E1E"
                                          HasShadow="False"
                                          BorderColor="#333333">
                                   <Editor Text="{Binding Ingredients}"
                                                 AutoSize="TextChanges"
                                                 TextColor="White"
                                                 HeightRequest="80"
                                                 Placeholder="Malzemeleri buraya yazın..."/>
                            </Frame>
                     </VerticalStackLayout>

                     <VerticalStackLayout Spacing="5">
                            <Label Text="Hazırlanışı"
                                          TextColor="#03DAC6"
                                          FontAttributes="Bold"/>
                            <Frame Padding="10"
                                          BackgroundColor="#1E1E1E"
                                          HasShadow="False"
                                          BorderColor="#333333">
                                   <Editor Text="{Binding Instructions}"
                                                 AutoSize="TextChanges"
                                                 TextColor="White"
                                                 HeightRequest="120"
                                                 Placeholder="Tarifin yapılışını detaylandırın..."/>
                            </Frame>
                     </VerticalStackLayout>

                     <Button Text="Tarifi Kaydet"
                             Command="{Binding SaveRecipeCommand}"
                             BackgroundColor="#03DAC6"
                             TextColor="Black"
                             FontAttributes="Bold"
                             CornerRadius="10"
                             HeightRequest="55"
                             Margin="0,10,0,0"/>
              </VerticalStackLayout>
       </ScrollView>
</ContentPage>